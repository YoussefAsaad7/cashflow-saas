enum IncomeSourceType {
  FULL_TIME
  FREELANCE
  RENTAL
  BUSINESS
  OTHER
}

enum WorkDayStatus {
  WORKED
  HOLIDAY
  WORKED_HOLIDAY
  SICK
  UNPAID_LEAVE
}

enum ExpenseType {
  FIXED
  VARIABLE
}

enum IncomeEntryType {
  MANUAL
  SALARY
  BONUS
  ADJUSTMENT
}

enum SalaryBaseType {
  MONTHLY
  DAILY
  HOURLY
}


generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

// prisma/schema.prisma
datasource db {
  provider  = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]

  incomeSources IncomeSource[]
  incomeEntries IncomeEntry[]
  expenseCategories ExpenseCategory[]
  expenseEntries ExpenseEntry[]
  workDays WorkDay[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model IncomeSource {
  id        String   @id @default(cuid())
  userId    String
  name      String
  type      IncomeSourceType
  isActive  Boolean  @default(true)

  user      User     @relation(fields: [userId], references: [id])
  entries   IncomeEntry[]

  createdAt DateTime @default(now())
}

model IncomeEntry {
  id            String   @id @default(cuid())
  userId        String
  sourceId      String
  amount        Decimal  @db.Decimal(12, 2)
  currency      String
  date          DateTime
  metadata      Json?

  type          IncomeEntryType @default(MANUAL)

  user          User         @relation(fields: [userId], references: [id])
  source        IncomeSource @relation(fields: [sourceId], references: [id])

  createdAt     DateTime @default(now())

  @@index([userId, date])
}

model SalaryRule {
  id            String   @id @default(cuid())
  userId        String
  name          String   // "Company A - 2024"
  currency      String   // "USD", "EUR"
  baseType      SalaryBaseType
  baseAmount    Decimal

  standardHoursPerDay Decimal
  workingDaysPerMonth Int?

  overtimeEnabled Boolean
  overtimeMultiplier Decimal?

  holidayPaid Boolean
  holidayMultiplier Decimal?

  createdAt     DateTime @default(now())
  validFrom     DateTime
  validTo       DateTime?

  isActive      Boolean  @default(true)

  workDays      WorkDay[]

  @@index([userId, isActive])
}


model WorkDay {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime
  status    WorkDayStatus
  amount    Decimal  @db.Decimal(12, 2)
  salaryRuleId String
  salaryRule   SalaryRule @relation(fields: [salaryRuleId], references: [id])
  createdAt    DateTime @default(now())
  metadata  Json?

  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, date])
}

model ExpenseCategory {
  id        String   @id @default(cuid())
  userId    String
  name      String
  type      ExpenseType

  user      User     @relation(fields: [userId], references: [id])
  entries   ExpenseEntry[]
}

model ExpenseEntry {
  id         String   @id @default(cuid())
  userId     String
  categoryId String
  amount     Decimal  @db.Decimal(12, 2)
  currency   String
  date       DateTime
  metadata   Json?

  user       User            @relation(fields: [userId], references: [id])
  category   ExpenseCategory @relation(fields: [categoryId], references: [id])

  createdAt  DateTime @default(now())

  @@index([userId, date])
}
